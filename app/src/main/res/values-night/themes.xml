<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.UniFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark Theme Colors -->
        <item name="colorPrimary">@color/dark_prim_col</item>
        <item name="colorPrimaryVariant">@color/dark_prim_col_var</item>
        <item name="colorOnPrimary">@color/light_bac</item>
        <item name="colorSecondary">@color/dark_sec_col</item>
        <item name="colorSecondaryContainer">@color/dark_prim_col_var</item>
        <item name="android:windowBackground">@color/dark_bac</item>
        <item name="android:statusBarColor">@color/dark_bac</item>


        <!-- Input Fields -->
        <item name="colorControlNormal">@color/light_bac</item>
        <item name="colorControlActivated">@color/dark_sec_col</item>
        <item name="colorControlHighlight">@color/dark_sec_col</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorHint">@color/dark_hint</item>

        <!-- TextInput styling -->
        <item name="textInputStyle">@style/CustomTextInputStyle</item>
    </style>

    <style name="Theme.UniFlow" parent="Base.Theme.UniFlow" />

    <style name="CustomTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_field_outline</item>
        <item name="boxBackgroundColor">@color/dark_field_outline</item>
        <item name="hintTextAppearance">@style/DarkHintTextStyle</item>
    </style>

    <style name="DarkHintTextStyle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/dark_hint</item>
    </style>

</resources>
