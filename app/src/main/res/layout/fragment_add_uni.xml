<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:text="Add a New University"
            android:textSize="20sp"
            android:textColor="?attr/colorBackgroundFloating"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etUniversityName"
            android:hint="University Name"
            android:textColor="?attr/colorBackgroundFloating"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etLocation"
            android:hint="Location (optional)"
            android:layout_width="match_parent"
            android:textColor="?attr/colorBackgroundFloating"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etEstablishedYear"
            android:hint="Established Year"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:textColor="?attr/colorBackgroundFloating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etWebsite"
            android:hint="Website (optional)"
            android:inputType="textUri"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorBackgroundFloating"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etAssociatedStudentIds"
            android:hint="Associated Student IDs (comma-separated)"
            android:inputType="text"
            android:layout_width="match_parent"
            android:textColor="?attr/colorBackgroundFloating"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>
</ScrollView>
