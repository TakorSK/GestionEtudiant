<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment"
    android:background="?android:attr/windowBackground"
    android:padding="16dp">

    <!-- Dark Mode Switch Row as Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />

            <Switch
                android:id="@+id/settings_switch_dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:thumbTint="?attr/colorPrimary"
                android:trackTint="?android:attr/colorControlActivated" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Change Profile Info Row as Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_change_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_dark_mode"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/settings_btn_change_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Profile Info"
                android:textSize="16sp"
                android:textColor="?android:textColorPrimary"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
