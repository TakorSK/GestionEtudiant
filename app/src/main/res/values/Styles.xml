<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedDialog" parent="Theme.UniFlow">
        <item name="android:windowBackground">@drawable/bg_dialog_rounded</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>



    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/backgroundColor</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/light_hint</item>
    </style>

    <style name="RoundedAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/bg_dialog_rounded</item>
    </style>

</resources>
